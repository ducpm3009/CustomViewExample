<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.example.ducpm.customviewexample.views.CustomView
        android:id="@+id/custom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        app:square_color="@color/squareColor"
        app:square_size="@dimen/dp_100"
        />

    <Button
        android:id="@+id/button_swap_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_view"
        android:text="@string/swap_color"
        />
</RelativeLayout>